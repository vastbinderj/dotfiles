root = true

[*]
indent_style = space
indent_size = 4
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{html,js,rb,css,scss,xml,yml,travis}]
indent_size=2

[package.json]
indent_size=2

[Gemfile*]
indent_size = 2

[Rakefile]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 8

